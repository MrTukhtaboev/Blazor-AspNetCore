@page "/"
@using EmployeeManagement.Web.Services
@using EmployeeManagement.Models
@using Newtonsoft.Json;
@inject HttpClient httpClient
@inject IHttpClientFactory _clientFactory

<h3>EmployeeList</h3>

@if (Employees is null)
{
    <h1>Loading...</h1>                
}
else
{
    <div class="card-deck">
    @foreach (var employee in Employees)
    {
        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
            <div class="card-header">
                <h3>@employee.FirstName @employee.LastName</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">Ko'rish</a>
                <a href="#" class="btn btn-primary m-1">Tahrirlash</a>
                <a href="#" class="btn btn-danger m-1">O'chirish</a>
            </div>
        </div>
    }
    </div>
}
@code {
    Employee[] Employees;

    protected async override Task OnInitializedAsync()
    {
        Employees = await httpClient.GetJsonAsync<Employee[]>("http://localhost:5000/api/employee");
    }
}